.atd-verify-wrapper {
  width: 100%;
  padding: 32rpx 0;
}

.atd-logo{
  text-align: center;
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(53,115,250,1);
  margin: 105rpx 0 155rpx;
}

.atd-verify-wrapper .atd-title-wrapper {
  padding-top: 32rpx;
  padding-bottom: 16rpx;
  padding-left: 32rpx;
  font-size: 24rpx;
  color: #999;
}

.atd-verify-wrapper .atd-tel-wrapper {
  padding: 0 32rpx;
}

.atd-verify-wrapper .atd-tel-wrapper .atd-input-con .atd-input-box {
  padding-left: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.atd-tel-wrapper .atd-input-con {
  border-bottom: 1rpx solid #f5f5f5;
}

.atd-verify-wrapper .atd-tel-wrapper .atd-input-con .atd-title-field {
  color: rgb(51, 51, 51);
}

.atd-verify-wrapper .am-input-item {
  flex: 1;
  box-sizing: border-box;
  margin-left: 30rpx;
  border-left: 1rpx solid #C9C9C9;
}

.atd-verify-wrapper .send-code-wrapper {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
  /* height: 50rpx;
  margin-bottom:0.3rem;
  padding-bottom:0.2rem; */
}

.atd-verify-wrapper .send-code-wrapper .atd-input-con {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: none;
}

.atd-verify-wrapper .send-code-wrapper .atd-input-box {
  padding-left: 8rpx;
}

.atd-verify-wrapper .send-code-wrapper .msg {
  padding: 15rpx 14rpx;
  text-align: center;
  font-size: 26rpx;
  color: #999;
  border: 1rpx solid #999;
  border-radius: 10rpx;
}

.atd-verify-wrapper .send-code-wrapper .msg.active {
  color: #3573FA;
  border: 1rpx solid #3573FA;
}

.atd-verify-wrapper .atd-input-con .atd-title-field {
  align-self: center;
  color: rgb(51, 51, 51);
}

.atd-input-con {
  flex: 1;
  height: 80rpx;
  margin-bottom:0.3rem;
  padding-bottom:0.2rem;
  display: flex;
  font-size: 28rpx;
}

.atd-title-field{
  width: 32rpx;
  display: flex;
  align-items: center;
}

.atd-title-field image{
  width: 100%;
  margin: 0 12rpx 0 0;
}

.atd-input-con .placeholder{
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
}

.atd-verify-wrapper .popover {
  width: 300rpx;
}

.atd-input-box {
  flex: 1;
  box-sizing: border-box;
}

.atd-verify-wrapper  .am-input-item {
  background: none !important
}

.atd-verify-wrapper  .am-input-line {
  position: static !important;
  height: 50rpx;
  min-height: 50rpx !important;
}

.atd-verify-wrapper input {
  height: 50rpx !important;
  padding: 16rpx !important;
  color: #999999 !important;
  font-size: 36rpx !important;
  background-color: transparent !important;
}

.validate_code{
  width: 160rpx;
}
.validate_code image{
  width: 100%;
}